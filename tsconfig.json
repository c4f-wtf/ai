{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "webworker",
            "es2019"
        ],
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "strict": true,
        //"noImplicitThis": true,
        //"noImplicitAny": true,
        //"strictNullChecks": true,
        //"strictFunctionTypes": true,
        "strictPropertyInitialization": false,
        //"alwaysStrict": true,
        //"strictBindCallApply": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "src",
        "paths": {
            "@types": [
                "types"
            ],
            "@localdb": [
                "localdb"
            ],
            "@util": [
                "util"
            ],
            "@sandbox": [
                "sandbox"
            ],
            "@shared-styles": [
                "component/shared-styles.css"
            ],
            "@src/*": [
                "*"
            ],
            "@store/*": [
                "store/*"
            ],
            "@page/*": [
                "component/page/*"
            ],
            "@iframe/*": [
                "iframe/*"
            ],
            "@component/*": [
                "component/*"
            ],
            "@element/*": [
                "component/element/*"
            ],
            "@scenario/*": [
                "scenario/*"
            ],
            "@worker/*": [
                "worker/*"
            ],
            "@modal/*": [
                "component/modal/*"
            ],
        }
    },
    "include": [
        "src"
    ]
}